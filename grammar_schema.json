{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "Grammar File Schema",
  "type": "object",

  "$defs": {
    "ending": {
      "type": "object",
      "properties": {
        "features": { "type": "object" },
        "form": { "type": "string" },
        "note": { "type": "string" }
      },
      "required": ["features", "form"]
    },
    "form": {
      "type": "object",
      "properties": {
        "features": { "type": "object" },
        "form": { "type": "string" },
        "note": { "type": "string" }
      },
      "required": ["features", "form"]
    }
  },

  "patternProperties": {
    "^[A-Z][A-Za-z0-9]*$": { 
      "type": "object",
      "required": ["Features", "Rules"],
      "properties": {
        "Features": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "Negation": {
          "type": "object",
          "properties": {
            "pattern": { "type": "string" },
            "example": { "type": "string" },
            "note": { "type": "string" }
          },
          "required": ["pattern"]
        },
        "Rules": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["applies"],
            "properties": {
              "applies": { "type": "object" },
              "pattern": { "type": "string" },
              "patterns": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "pattern": { "type": "string" },
                    "example": { "type": "string" },
                    "note": { "type": "string" },
                    "endings": {
                      "type": "array",
                      "items": { "$ref": "#/$defs/ending" }
                    },
                    "forms": {
                      "type": "array",
                      "items": { "$ref": "#/$defs/form" }
                    }
                  },
                  "oneOf": [
                    { "required": ["pattern"] },
                    { "required": ["forms"] }
                  ]
                }
              },
              "endings": {
                "type": "array",
                "items": { "$ref": "#/$defs/ending" }
              },
              "forms": {
                "type": "array",
                "items": { "$ref": "#/$defs/form" }
              },
              "example": { "type": "string" },
              "note": { "type": "string" },
              "negation": { "type": "string" }
            },
            "oneOf": [
              { "required": ["pattern"] },
              { "required": ["patterns"] },
              { "required": ["forms"] }
            ]
          }
        }
      }
    }
  },

  "additionalProperties": false
}
