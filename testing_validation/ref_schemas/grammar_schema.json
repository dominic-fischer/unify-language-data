{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "Grammar File Schema",
  "type": "object",

  "$defs": {

    "patterns": {
      "type": "array",
      "items": { "$ref": "#/$defs/pattern_object" },
      "minItems": 1
    },
    "pattern_object": {
      "type": "object",
      "properties": {
        "pattern": { "type": "string" },
        "notes": { "$ref": "#/$defs/notes" },
        "examples": { "$ref": "#/$defs/examples" },
        "title": { "type": "string" }
      },
      "required": ["pattern"],
      "additionalProperties": false
    },

    "formparadigms": {
      "type": "array",
      "items": { "$ref": "#/$defs/formparadigm_object" },
      "minItems": 1
    },
    "formparadigm_object": {
      "type": "object",
      "properties": {
        "formparadigm": {
          "type": "array",
          "items": { "$ref": "#/$defs/form_item" },
          "minItems": 1
        },
        "notes": { "$ref": "#/$defs/notes" },
        "examples": { "$ref": "#/$defs/examples" },
        "title": { "type": "string" }
      },
    "required": ["formparadigm"],
    "additionalProperties": false
    },
    "form_item": {
      "type": "object",
      "required": ["features", "form"],
      "properties": {
        "features": {
          "type": "object"
        },
        "form": {
          "type": "string"
        }
      }
    },

    "endingparadigms": {
      "type": "array",
      "items": { "$ref": "#/$defs/endingparadigm_object" },
      "minItems": 1
    },
    "endingparadigm_object": {
      "type": "object",
      "properties": {
        "endingparadigm": {
          "type": "array",
          "items": { "$ref": "#/$defs/ending_item" },
          "minItems": 1
        },
        "notes": { "$ref": "#/$defs/notes" },
        "examples": { "$ref": "#/$defs/examples" },
        "title": { "type": "string" }
      },
      "required": ["endingparadigm"],
      "additionalProperties": false
    },
    "ending_item": {
      "type": "object",
      "required": ["features", "ending"],
      "properties": {
        "features": {
          "type": "object"
        },
        "ending": {
          "type": "string"
        }
      }
    },

    "applies": {
      "type": "object",
      "description": "Feature-value constraints for the rule"
    },
    "examples": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    }
  },

  "patternProperties": {
    "^[A-Z][A-Za-z0-9-]*$": {
      "type": "object",
      "required": ["Features", "Rules"],
      "properties": {
        "Features": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "Rules": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "title": { "type": "string"},
              "notes": { "$ref": "#/$defs/notes" },
              "applies": { "$ref": "#/$defs/applies" },
              "patterns": { "$ref": "#/$defs/patterns" },
              "endingparadigms": { "$ref": "#/$defs/endingparadigms" },
              "formparadigms": { "$ref": "#/$defs/formparadigms" }
            },
          "required":["applies"],
          "anyOf":[
            {"required":["patterns"]},
            {"required":["formparadigms"]},
            {"required":["endingparadigms"]}
          ]
          }
        }
      }
    }
  },
  "additionalProperties": false
}